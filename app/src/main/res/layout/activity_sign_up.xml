<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgroundimg"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        tools:context=".signUp">

        <TextView
            android:id="@+id/textView7"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="250dp"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN UP" />
        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="320dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            app:boxBackgroundColor="#F2F4F4"
            android:layout_height="55dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/userNics"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:hint="NICS ID" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="320dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            app:boxBackgroundColor="#F2F4F4"
            android:layout_height="55dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:hint=" Full Name " />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="320dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            app:boxBackgroundColor="#F2F4F4"
            android:layout_height="55dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/userFather"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:hint="Father Name " />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="320dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            app:boxBackgroundColor="#F2F4F4"
            android:layout_height="55dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/userDob"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:hint="Date of Birth " />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="320dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            app:boxBackgroundColor="#F2F4F4"
            android:layout_height="55dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/userQualification"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:hint="Highest Qualification " />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="320dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            app:boxBackgroundColor="#F2F4F4"
            android:layout_height="55dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/userGender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:hint="Male or Female " />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="320dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            app:boxBackgroundColor="#F2F4F4"
            app:startIconDrawable="@drawable/baseline_call_24"
            android:layout_height="55dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/userContact"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:hint="Contact Number" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="320dp"
            android:layout_marginTop="20dp"
            app:startIconDrawable="@drawable/baseline_email_24"
            android:layout_marginLeft="20dp"
            app:boxBackgroundColor="#F2F4F4"
            android:layout_height="55dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/userEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:hint="Email ID" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="320dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            app:startIconDrawable="@drawable/baseline_lock_24"
            app:passwordToggleEnabled="true"
            app:boxBackgroundColor="#F2F4F4"
            android:layout_height="55dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/userPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:hint="Password" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_margin="30dp"
            android:id="@+id/succefullSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SignUp" />

    </LinearLayout>
</ScrollView>